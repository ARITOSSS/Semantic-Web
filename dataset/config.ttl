@prefix : <#> .
@prefix fuseki: <http://jena.apache.org/fuseki#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix tdb: <http://jena.apache.org/2016/tdb#> .
@prefix ja: <http://jena.hpl.hp.com/2005/11/Assembler#> .

# ──────────────────────────────────────────
#  Server
# ──────────────────────────────────────────
[] rdf:type fuseki:Server ;
   fuseki:services ( <#fraude_inferences_service> ) .

# ──────────────────────────────────────────
#  Service SPARQL pour l'inférence
# ──────────────────────────────────────────
<#fraude_inferences_service> rdf:type fuseki:Service ;
    fuseki:name "fraude_inferences" ;
    fuseki:serviceQuery "query" ;
    fuseki:serviceUpdate "update" ;
    fuseki:serviceReadWriteGraphStore "data" ;
    fuseki:serviceReadGraphStore "get" ;
    fuseki:dataset <#fraude_inferences_dataset> .

# ──────────────────────────────────────────
#  Dataset = graphe inféré
# ──────────────────────────────────────────
<#fraude_inferences_dataset> rdf:type ja:RDFDataset ;
    ja:defaultGraph <#fraudeInfModel> .

# ──────────────────────────────────────────
#  InfModel OWL Mini
# ──────────────────────────────────────────
<#fraudeInfModel> rdf:type ja:InfModel ;
    ja:baseModel <#fraudeTDB> ;
    ja:reasoner [
        ja:reasonerURL <http://jena.hpl.hp.com/2003/OWLMiniFBRuleReasoner>
    ] .

# ──────────────────────────────────────────
#  Graph TDB — votre base
# ──────────────────────────────────────────
<#fraudeTDB> rdf:type tdb:GraphTDB ;
    tdb:location "databases/fraude" .
